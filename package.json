{
  "name": "project",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "type": "module",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "scripts": {
    "dev": "npx nodemon",
    "build": "rimraf ./build && npx tsc",
    "start": "npm run build && node build/app",
    "lint": "npx eslint ./server",
    "format": "npx eslint ./server --fix",
    "sequelize:migrate:make": "./node_modules/.bin/sequelize --migrations-path=./server/db/sequelize/migrations/ migration:generate --name",
    "sequelize:migrate:latest": "./node_modules/.bin/sequelize --migrations-path=./server/db/sequelize/migrations/ --config=./server/db/sequelize/config/config.js db:migrate",
    "sequelize:migrate:undo": "./node_modules/.bin/sequelize --migrations-path=./server/db/sequelize/migrations/ --config=./server/db/sequelize/config/config.js db:migrate:undo"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/NataliiaDyachok/Academy_StudentsProject.git"
  },
  "author": "Nataliia Diachok",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/NataliiaDyachok/Academy_StudentsProject/issues"
  },
  "homepage": "https://github.com/NataliiaDyachok/Academy_StudentsProject#readme",
  "dependencies": {
    "base64id": "^2.0.0",
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-ws": "^5.0.2",
    "joi": "^17.7.0",
    "pg": "^8.9.0",
    "sequelize": "^6.28.0",
    "socket.io": "^4.5.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.14",
    "@types/express-ws": "^3.0.1",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "eslint": "^8.32.0",
    "husky": "^8.0.3",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.1",
    "rimraf": "^4.1.1",
    "sequelize-cli": "^6.6.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
